<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home" >

        <Button
            android:id="@+id/btn_author"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_100"
            android:layout_marginTop="@dimen/dp_200"
            android:background="@drawable/submit_button_image_selector"
            android:onClick="onClick"
            android:text="@string/author"
            android:textColor="@color/Red"
            android:textSize="@dimen/text_size_15"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_publisher"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_35"
            android:layout_alignLeft="@id/btn_author"
            android:layout_below="@id/btn_author"
            android:layout_marginLeft="@dimen/dp_ng_35"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/submit_button_image_selector"
            android:onClick="onClick"
            android:text="@string/publisher"
            android:textColor="@color/Red"
            android:textSize="@dimen/text_size_15"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_catagory"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_35"
            android:layout_alignLeft="@id/btn_author"
            android:layout_below="@id/btn_publisher"
            android:layout_marginLeft="@dimen/dp_ng_50"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/submit_button_image_selector"
            android:onClick="onClick"
            android:text="@string/category"
            android:textColor="@color/Red"
            android:textSize="@dimen/text_size_15"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_new_book"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_35"
            android:layout_alignLeft="@id/btn_author"
            android:layout_below="@id/btn_catagory"
            android:layout_marginLeft="@dimen/dp_ng_35"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/submit_button_image_selector"
            android:onClick="onClick"
            android:text="@string/new_book"
            android:textColor="@color/Red"
            android:textSize="@dimen/text_size_15"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_favorite_books"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_35"
            android:layout_alignLeft="@id/btn_author"
            android:layout_below="@id/btn_new_book"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/submit_button_image_selector"
            android:onClick="onClick"
            android:text="@string/favorite_books"
            android:textColor="@color/Red"
            android:textSize="@dimen/text_size_15"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_locate_favorite_book"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_alignTop="@id/btn_catagory"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_ng_35"
            android:layout_toRightOf="@id/btn_catagory"
            android:background="@drawable/gps_button_image_selector"
            android:onClick="onClick"
            android:textColor="@color/White"
            android:textSize="@dimen/text_size_15"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/splash_screen"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/black"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="100dp" >

            <TextView
                android:id="@+id/splash_headline"
                style="@style/SplashTextStyle" />

            <TextView
                android:id="@+id/splash_text_one"
                style="@style/SplashTextStyle" />

            <TextView
                android:id="@+id/splash_text_two"
                style="@style/SplashTextStyle" />

            <TextView
                android:id="@+id/splash_text_three"
                style="@style/SplashTextStyle" />

            <TextView
                android:id="@+id/splash_text_four"
                style="@style/SplashTextStyle" />

            <TextView
                android:id="@+id/splash_text_five"
                style="@style/SplashTextStyle" />

            <TextView
                android:id="@+id/splash_text_six"
                style="@style/SplashTextStyle" />

            <Button
                android:id="@+id/splash_correct"
                style="@style/SplashTextStyle"
                android:onClick="onClick"
                android:text="Ok" />
        </LinearLayout>
    </ScrollView>

</merge>